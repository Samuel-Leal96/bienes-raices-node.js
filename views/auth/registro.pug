extends ../layout/index

block contenido
    div.py10
        h1(class = "text-4xl my-10 font-extrabold text-center") Bienes
            span(class = "font-normal") Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="mt-8 mx-auto max-w-md")
            div(class="bg-white py-8 px-4 shadow")
                form(class="space-y-5" method="POST" action="/auth/registro")
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="nombre") Tu nombre
                        input#nombre(
                            type="text" 
                            name="nombre"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                            placeholder="Tu Nombre")
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="email") Email de registro
                        input#email(
                            type="email" 
                            name="email"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                            placeholder="Tu correo electrónico")
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="password") Password
                        input#password(
                            type="password" 
                            name="password"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                            placeholder="Tu contraseña")
                    div
                        label(class="block text-sm uppercase text-gray-600 mb-2 font-bold" for="repetir_password") Repetir Passord
                        input#repetir_password(
                            type="password" 
                            name="repetir_password"
                            class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" 
                            placeholder="Repite tu password")

                    div(class="flex items-center justify-between")
                        a(href="/auth/login" class="text-gray-500 text-xs") ¿Ya tienes cuenta? Inicia Sesión 
                        a(href="/auth/olvide-password" class="text-gray-500 text-xs") Olvide mi contraseña 

                    input(type="submit" value="Crear cuenta" class="w-full bg-indigo-600 hover:bg-indigo-800 text-white font-bold py-2 cursor-pointer rounded-lg")
                            